<button id="themeButton">cambiar tema</button>

<script type="module">
  function toggleTheme() {
    const isDarkMode = document.documentElement.classList.contains('dark')
    if (isDarkMode) {
      // Si está en modo oscuro, quita la clase y guarda la preferencia en localStorage
      document.documentElement.classList.remove('dark')
      localStorage.setItem('theme', 'light')
    } else {
      // Si está en modo claro, agrega la clase y guarda la preferencia en localStorage
      document.documentElement.classList.add('dark')
      localStorage.setItem('theme', 'dark')
    }
  }
  const themeToggleBtn = document.getElementById('themeButton')
  themeToggleBtn?.addEventListener('click', () => {
    console.log('clickado')
    toggleTheme()
  })
</script>
