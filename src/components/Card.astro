---
interface Props {
  id: number
  title: string
  body: string
  href?: string
  imgUrl: string
}

const { href, title, body, imgUrl, id } = Astro.props
---

<li class="list-none w-full">
  <a href={href}>
    <img
      transition:name={'card' + id}
      transition:animate="fade"
      class="w-full h-[250px] object-cover object-center rounded-md
      hover:scale-105 transition-transform ease-in-out duration-300"
      src={imgUrl}
      alt={title + ' image'}
    />
    <h2 class="py-2 text-lg font-bold hover:underline p-2">
      {title}
    </h2>
  </a>
</li>
