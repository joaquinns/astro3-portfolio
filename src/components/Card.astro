---
interface Props {
  id: number
  title: string
  body?: string
  href?: string
  imgUrl: string
}

const { href, title, imgUrl, id } = Astro.props
---

<li class="list-none w-full">
  <a href={href}>
    <img
      transition:name={'card' + id}
      transition:animate="fade"
      class="w-full h-[250px] object-cover object-center rounded-md
      hover:scale-105 transition-transform ease-in-out duration-300"
      src={imgUrl}
      alt={title + ' image'}
      loading="lazy"
    />
    <h2
      class="font-bold text-transparent text-xl bg-clip-text py-2 bg-gradient-to-r from-cyan-500 to-blue-600"
    >
      {title}
    </h2>
  </a>
</li>
