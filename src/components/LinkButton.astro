---
interface Props {
  url: string
  class?: string
}

const { url, class: classes } = Astro.props
---

<a
  referrerpolicy="no-referrer"
  target="_blank"
  href={url}
  class={`px-5 py-3 font-bold rounded text-white duration-200 ease-in-out hover:scale-110 ${
    classes
      ? classes
      : 'bg-violet-600 hover:bg-violet-700 dark:bg-yellow-500 dark:hover:bg-yellow-400'
  } flex justify-center items-center gap-1`}
>
  <slot name="icon" />
  <slot />
</a>
