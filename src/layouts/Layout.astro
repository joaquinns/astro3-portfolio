---
interface Props {
  title: string
}
const { title } = Astro.props

import { ViewTransitions } from 'astro:transitions'
import Header from '../components/Header.astro'
import SocialMediaIcons from '../components/SocialMediaIcons.astro'
---

<!doctype html>
<html lang="en" transition:animate="none">
  <head>
    <meta charset="UTF-8" />
    <meta name="description" content="Astro description" />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="generator" content={Astro.generator} />
    <title>{title}</title>
    <ViewTransitions />
  </head>
  <body
    class="bg-darkcolor min-h-screen text-slate-100 overflow-x-hidden tracking-tighter"
  >
    <Header />
    <slot />
    <footer class="h-24 w-full border-t border-slate-50/10 bg-darkcolor mt-8">
      <div
        class="container mx-auto max-w-screen-lg justify-center items-center h-full"
      >
        <div class="flex justify-center items-center h-full w-full">
          <SocialMediaIcons icons={['Github']} size={32} fill="fill-white" />
        </div>
      </div>
    </footer>
    <style is:global>
      p {
        font-size: max(15px, min(2vw, 20px));
      }

      html {
        scroll-behavior: smooth;
      }
    </style>
  </body>
</html>
